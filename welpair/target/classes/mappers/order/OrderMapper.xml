    <!-- 상품이 존재하는지 조회 -->
    <select id="checkoutSellProductId" resultMap="com.hielectro.welpair.sellproduct.model.dto.SellProductDTO">
        SELECT
            *
        FROM T_SELL_PRODUCT
        WHERE SELL_PRODUCT_ID = #{sellProductId}
    </select>

    <!-- 회원이 존재하는지 조회 -->
    <select id="checkoutMemberById" resultMap="memberResultMap">
        SELECT * FROM T_MEMBER
        WHERE EMP_NO = #{empNo}
    </select>

    <!-- cart 테이블 삽입 -->
    <insert id="addcart">
        INSERT
        INTO T_CART A
            (
            A.CART_NO,
            A.EMP_NO
            )
        VALUES
            (
            'CR' || LPAD(SEQ_CART_NO.NEXTVAL, 6, '0'),
            #{ empNo }
            )
    </insert>

    <!-- cart 테이블 pk 조회 -->
    <select id="selectCartNo">
        SELECT 'CR' || LPAD(SEQ_CART_NO.CURRVAL, 6, '0') FROM DUAL
    </select>

    <!-- cartSellProduct 테이블 삽입 -->
    <insert id="addCartSellProduct" parameterType="CartSellProductDTO">
        INSERT
        INTO T_CART_SELL_PRODUCT A
            (
            A.CART_NO,
            A.SELL_PRODUCT_ID,
            A.CART_AMOUNT,
            A.DELIVERY_PRICE
        )
        VALUES
            (
            #{cartNo},
            #{sellProductId},
            #{cartAmount},
            DEFAULT
            )
    </insert>

</mapper>